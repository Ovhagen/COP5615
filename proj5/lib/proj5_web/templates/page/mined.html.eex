<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Bitcoins mined</h1>
</div>


<canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

<!-- Graphs -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
<script>
  var ctx = document.getElementById("myChart");

  var data = {
    labels: [],
    datasets: [{
      data: [],
      lineTension: 0,
      backgroundColor: 'transparent',
      borderColor: 'rgb(5, 183, 50)',
      borderWidth: 2,
      pointBackgroundColor: 'rgb(5, 183, 50)',
      pointHoverBorderWidth: 3,
      pointRadius: 2
    }]
  }

  var options = {
    responsive: true,
    layout: {
        padding: {
            left: 0,
            right: 10,
            top: 0,
            bottom: 0
        }
    },
    scales: {
      xAxes: [{
        display: true,
        scaleLabel: {
          display: true,
          labelString: 'Time (seconds)'
        },
        ticks: {
           callback: function(t) {
             return t + 's';
           }
        }
      }],
      yAxes: [{
        ticks: {
          beginAtZero: false
        },
        scaleLabel: {
          display: true,
          labelString: 'Bitcoin'
        }
      }]
    },
    legend: {
      display: false,
    }
  }

 var myChart = new Chart(ctx, {type: 'line',
                               data: data,
                               options: options
                             });
</script>

<h4>Chart Description</h4>
<p class="text-left">The graph displays the amount of bitcoins that have been mined in the network.</p>
